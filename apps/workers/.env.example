# ARGO Workers Configuration

# FTP Configuration
FTP_SERVER=data-argo.ifremer.fr
FTP_PORT=21
FTP_TIMEOUT=300
FTP_MAX_RETRIES=3
FTP_RETRY_DELAY=5

# Data Configuration
ARGO_DAC=incois
LOCAL_CACHE_PATH=/tmp/argo_data
ENABLE_INCREMENTAL_SYNC=true

# HTTP Configuration
HTTP_BASE_URL=https://data-argo.ifremer.fr
HTTP_TIMEOUT=30
HTTP_MAX_RETRIES=3

# Processing
BATCH_SIZE=10
MAX_WORKERS=4
PROFILE_BATCH_LIMIT=None

# Output
OUTPUT_ARROW_FORMAT=true
ARROW_COMPRESSION=zstd

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Environment
ENVIRONMENT=development
